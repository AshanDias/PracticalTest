@model ProductViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <center>
                <div class="row">
                    <div class="col-md-4">
                    </div>
                    <div class="col-md-4">
                        <h3>
                            Product List
                        </h3>
                    </div>
                    <div class="col-md-4">
                        <div class="row">
                            <div class="col-md-4"></div>
                            <div class="col-md-4"></div>
                            <div class="col-md-4">
                                <button type="button" class="btn btn-primary">
                                    Create Product
                                </button>
                            </div>
                        </div>

                    </div>
                </div>
            </center>
        </div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <form asp-action="Filter" asp-controller="Home" method="post">
                    <div class="col-md-8">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="row">
                                   
                                        <select class="form-control" asp-for="ProductTypeId">
                                            <option value="0">All</option>
                                            @foreach (var item in Model.ProductType)
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }
                                        </select>
                                  
                                    
                                </div>



                            </div>
                            <div class="col-md-6">
                                <input type="text" class="form-control" asp-for="SearchText" />
                            </div>
                            <div class="col-md-1">
                                <button type="submit" class="btn btn-primary">
                                    Search
                                </button>

                            </div>
                        </div>
                    </div>
                </form>
                <div class="col-md-4">


                </div>
            </div>
            <div class="row">&nbsp;</div>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            Product Name
                        </th>
                        <th>
                            Product Type
                        </th>
                        <th>
                            Description
                        </th>
                    </tr>
                </thead>
                <tbody>
                  @foreach (var item in Model.Product)
                  {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.ProductType.Name</td>
                        <td>@item.Description</td>
                    </tr>
                  }
                </tbody>
            </table>
            <nav>
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="#">Previous</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">1</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">2</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">3</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">4</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">5</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>